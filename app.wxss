/* 背景遮罩 */

.mask {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  z-index: 99999;
}

.modelwindow {
  width: 590rpx;
  height: 376rpx;
  background: #fff;
  position: absolute;
  border-radius: 20rpx;
  top: 435rpx;
  left: 80rpx;
  z-index: 9999999999;
  display: flex;
  flex-direction: column;
}

.modelwindow .txt {
  font: 28rpx "";
  color: #333;
  margin-top: 59rpx;
  text-align: center;
}

.modelwindow  input {
  height: 70rpx;
  width: 354rpx;
  background: #f6f6f6;
  text-align: center;
  font: 24rpx/70rpx "";
  color: #999;
  margin: 30rpx auto 40rpx;
}

.modelwindow .btn {
  height: 60rpx;
  width: 160rpx;
  background: #dc4c41;
  font: 24rpx "";
  color: #fff;
}

/* 邀请码 */

.addmodel {
  width: 590rpx;
  height: 376rpx;
  background: #fff;
  position: absolute;
  border-radius: 20rpx;
  top: 435rpx;
  left: 80rpx;
  z-index: 9999999999;
  display: flex;
  flex-direction: column;
}

.addmodel .text {
  text-align: center;
  margin: 30rpx 0 20rpx;
}

.addmodel .addmodel_project {
  display: flex;
  background: #f6f6f6;
  align-items: center;
  height: 160rpx;
  width: 500rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.addmodel .addmodel_project .addmodel_project_img {
  height: 115rpx;
  width: 115rpx;
  margin: 0 30rpx 0 50rpx;
  border-radius: 10rpx;
}

.addmodel .addmodel_project .addmodel_project_box {
  display: flex;
  flex-direction: column;
}

.addmodel .addmodel_project .addmodel_project_box .txt {
  font: 28rpx/2 "";
  color: #333;
}

.addmodel .addmodel_project .addmodel_project_box .label {
  height: 30rpx;
  border-radius: 6rpx;
  font: 20rpx/30rpx "";
  color: #333;
  margin-top: 21rpx;
}

.addmodel .btn {
  display: flex;
  margin: 30rpx auto 0;
}

.addmodel .btn view {
  border-radius: 8rpx;
  height: 60rpx;
  width: 160rpx;
  text-align: center;
  font: 28rpx/60rpx "";
}

.addmodel .btn view:nth-child(1) {
  color: #fff;
  background: #dc4c41;
  margin-right: 60rpx;
}

.addmodel .btn view:nth-child(2) {
  border: 2rpx solid #dc4c41;
  color: #dc4c41;
}
