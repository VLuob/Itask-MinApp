}

.option .option_box .prd .txt1 {
  font: 28rpx "";
  color: #333;
  margin-top: 30rpx;
}

.option .option_box .prd .people {
  display: flex;
  margin-top: 20rpx;
}

.option .option_box .prd .people .icon {
  height: 32rpx;
  width: 28rpx;
  margin-right: 15rpx;
}

.option .option_box .prd .people .name {
