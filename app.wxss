  position: absolute;
  top: 17rpx;
}

.option .option_left::before {
  content: "";
  width: 38rpx;
  height: 3rpx;
  background: #dbdbdb;
  position: absolute;
  top: 25rpx;
}

.option .option_box .select1 {
  height: 33rpx;
  width: 33rpx;
  position: absolute;
  left: 29rpx;
  top: 56rpx;
}

.option .option_box .prd {
  position: absolute;
  left: 92rpx;
}

.option .option_box .prd .txt {
  font: 28rpx "";
  color: #999;
