  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.option .option_left.left1 {
  height: 101rpx;
  width: 38rpx;
  background: #e1e1e1;
  margin: auto 0;
  margin-left: 49rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.16);
  position: relative;
}

.option .option_left.left1::after {
