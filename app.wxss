  background: #ebebeb;
  border-radius: 6rpx;
  font: 18rpx/30rpx "";
  color: #333;
  text-align: center;
  margin-top: 3rpx;
  overflow: hidden;
}

.option .option_box .enclosure {
  height: 30rpx;
  width: 28rpx;
  position: absolute;
  right: 156rpx;
  top: 43rpx;
}

.option .option_box .edit {
  height: 30rpx;
  width: 26rpx;
  position: absolute;
  right: 100rpx;
  top: 43rpx;
}

.option .option_box .time {
  height: 38rpx;
  width: 134rpx;
  background: #efeeee;
  position: absolute;
  right: 70rpx;
