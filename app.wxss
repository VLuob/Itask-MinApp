/**app.wxss**/

/* 头部 */

page {
  background: #f6f6f6;
  font-size: PingFang-SC-Medium;
  font-weight: Medium;
  height: 100%;
  width: 100%;
}

.head {
  height: 100rpx;
  width: 100%;
  background: #dc4c41;
  position: relative;
}

.head .title {
  font: 34rpx "";
  color: #fff;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 35rpx;
}

.head image {
  height: 34rpx;
  width: 18rpx;
  position: absolute;
  bottom: 35rpx;
  left: 34rpx;
}

/* 任务列表 */

.tasklist {
  height: 202.1rpx;
  width: 100%;
  background: #fff;
  margin: 20rpx 0;
  position: relative;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.1);
}

.tasklist .tasklist_icon {
  width: 138rpx;
  height: 138rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 23rpx;
  top: 31rpx;
}

.tasklist .tasklist_txt {
  position: absolute;
  left: 183rpx;
  top: 30rpx;
}

.tasklist .tasklist_txt text {
  font: 30rpx "";
  color: #333;
  font-weight: Medium;
}

.tasklist  .tasklist_txt .center {
  display: flex;
  margin: 20rpx 0;
}

.tasklist  .tasklist_txt .center .headic {
  height: 32rpx;
  width: 28rpx;
}

.tasklist  .tasklist_txt .center .txt {
  height: 30rpx;
  width: 70rpx;
  background: #ebebeb;
  border-radius: 6rpx;
  font: 18rpx/30rpx '';
  color: #333;
  text-align: center;
  margin-left: 15rpx;
  overflow: hidden;
}

.tasklist .tasklist_txt view {
  height: 30rpx;
  width: 97rpx;
  border-radius: 6rpx;
  font: 18rpx/30rpx "";
  color: #fff;
  text-align: center;
}

.tasklist .tasklist_time {
  height: 38rpx;
  width: 134rpx;
  background: #efeeee;
  position: absolute;
  right: 70rpx;
  bottom: 1rpx;
  border-radius: 6rpx 6rpx 0 0;
  font: 20rpx/38rpx "";
  color: #333;
  font-weight: Regular;
  text-align: center;
}

.tasklist .tasklist_nexticon {
  height: 24rpx;
  width: 13rpx;
  position: absolute;
  top: 54rpx;
  right: 33rpx;
}

/* 选项-筛选-发布流程-未完成流程 */

